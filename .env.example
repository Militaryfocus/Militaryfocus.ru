# Основные настройки Flask
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
FLASK_DEBUG=False
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# База данных
DATABASE_URL=sqlite:///blog.db
# Для PostgreSQL: postgresql://username:password@localhost/blog_db
# Для MySQL: mysql://username:password@localhost/blog_db

# Загрузка файлов
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Пагинация
POSTS_PER_PAGE=5
COMMENTS_PER_PAGE=10

# Email настройки (опционально)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ИИ провайдеры (опционально)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=AI-your-google-api-key-here

# SEO и аналитика API (опционально)
GOOGLE_TRENDS_API_KEY=your-google-trends-api-key
SEMRUSH_API_KEY=your-semrush-api-key
AHREFS_API_KEY=your-ahrefs-api-key
MOZ_API_KEY=your-moz-api-key

# ИИ система
AI_CONTENT_ENABLED=True
AI_AUTO_PUBLISH=False
AI_GENERATE_COMMENTS=True
AI_POSTS_PER_DAY=3
AI_MIN_QUALITY=0.7

# Безопасность
CSRF_ENABLED=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Мониторинг
LOG_LEVEL=INFO
ENABLE_METRICS=True
ALERT_EMAIL=admin@yourdomain.com