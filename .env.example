# ===========================================
# Flask Configuration
# ===========================================
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
FLASK_DEBUG=False
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ===========================================
# Database Configuration
# ===========================================
# SQLite (default)
DATABASE_URL=sqlite:///instance/blog.db

# PostgreSQL example:
# DATABASE_URL=postgresql://username:password@localhost:5432/blog_db

# MySQL example:
# DATABASE_URL=mysql://username:password@localhost:3306/blog_db

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_FOLDER=blog/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf,doc,docx

# ===========================================
# Pagination Settings
# ===========================================
POSTS_PER_PAGE=10
COMMENTS_PER_PAGE=20
USERS_PER_PAGE=20

# ===========================================
# Email Configuration (optional)
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# ===========================================
# AI Providers (optional)
# ===========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_TEMPERATURE=0.7

# Google AI
GOOGLE_AI_KEY=AI-your-google-api-key-here
GOOGLE_AI_MODEL=gemini-pro
GOOGLE_AI_TEMPERATURE=0.7

# ===========================================
# SEO and Analytics API (optional)
# ===========================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
GOOGLE_SEARCH_CONSOLE_KEY=your-search-console-key
GOOGLE_TRENDS_API_KEY=your-google-trends-api-key
SEMRUSH_API_KEY=your-semrush-api-key
AHREFS_API_KEY=your-ahrefs-api-key
MOZ_API_KEY=your-moz-api-key

# ===========================================
# AI System Configuration
# ===========================================
AI_CONTENT_ENABLED=True
AI_AUTO_PUBLISH=False
AI_GENERATE_COMMENTS=False
AI_POSTS_PER_DAY=3
AI_MIN_QUALITY=0.7
AI_DEFAULT_LANGUAGE=ru

# ===========================================
# Caching Configuration (optional)
# ===========================================
# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TIMEOUT=300

# Memcached
MEMCACHED_SERVERS=localhost:11211
MEMCACHED_KEY_PREFIX=blog_

# ===========================================
# Security Settings
# ===========================================
# CSRF Protection
CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# Session Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# ===========================================
# Monitoring and Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=blog_system.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Metrics
ENABLE_METRICS=True
PROMETHEUS_PORT=9090

# Alerts
ALERT_EMAIL=admin@yourdomain.com
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_RESPONSE_TIME=2.0

# ===========================================
# SEO Configuration
# ===========================================
SITE_NAME=Military Focus Blog
SITE_DESCRIPTION=Современный блог о военной тематике
SITE_KEYWORDS=военный блог,military,армия,оборона
SITE_AUTHOR=Military Focus Team
DEFAULT_OG_IMAGE=/static/images/og-default.jpg

# ===========================================
# Social Media Integration (optional)
# ===========================================
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ===========================================
# CDN Configuration (optional)
# ===========================================
CDN_ENABLED=False
CDN_URL=https://cdn.yourdomain.com
CDN_STATIC_FOLDER=static

# ===========================================
# Development Tools (dev only)
# ===========================================
FLASK_DEBUG_TB_ENABLED=False
FLASK_DEBUG_TB_INTERCEPT_REDIRECTS=False
TESTING=False

# ===========================================
# Feature Flags
# ===========================================
FEATURE_COMMENTS=True
FEATURE_LIKES=True
FEATURE_BOOKMARKS=True
FEATURE_NOTIFICATIONS=True
FEATURE_AI_CONTENT=True
FEATURE_SEO_TOOLS=True
FEATURE_ADMIN_PANEL=True