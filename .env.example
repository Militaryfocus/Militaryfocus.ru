# Конфигурация Flask приложения
# Скопируйте этот файл в .env и настройте под ваши нужды

# Основные настройки Flask
FLASK_ENV=development
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Безопасность
SECRET_KEY=your-secret-key-here-change-this-in-production
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_EMAIL=admin@yourdomain.com

# База данных
DATABASE_URL=sqlite:///blog.db
# Для PostgreSQL: postgresql://user:password@localhost/blog
# Для MySQL: mysql://user:password@localhost/blog

# SSL сертификаты (для продакшена)
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/key.pem

# Загрузка файлов
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB в байтах

# Пагинация
POSTS_PER_PAGE=5
COMMENTS_PER_PAGE=10

# ИИ настройки
OPENAI_API_KEY=your-openai-api-key-here

# Redis для rate limiting (опционально)
REDIS_URL=redis://localhost:6379/0

# Логирование
LOG_LEVEL=INFO
LOG_FILE=blog_system.log