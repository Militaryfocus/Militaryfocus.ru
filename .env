# Конфигурация приложения
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Секретный ключ для сессий и форм
SECRET_KEY=your-secret-key-change-in-production

# База данных
DATABASE_URL=sqlite:///blog.db

# Настройки загрузки файлов
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Email настройки (для восстановления пароля)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Пагинация
POSTS_PER_PAGE=5
COMMENTS_PER_PAGE=10

# ИИ настройки
AI_CONTENT_ENABLED=True
AI_AUTO_PUBLISH=True
AI_GENERATE_COMMENTS=True
AI_POSTS_PER_DAY=3
AI_MIN_QUALITY=0.7
AI_CONTENT_STYLE=mixed

# OpenAI API (опционально, для улучшенной генерации)
# OPENAI_API_KEY=your-openai-api-key-here