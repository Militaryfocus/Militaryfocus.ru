{
  "ai_providers": {
    "openai": {
      "enabled": false,
      "api_key": "",
      "model": "gpt-4",
      "max_tokens": 2000,
      "temperature": 0.7,
      "timeout": 30,
      "fallback_model": "gpt-3.5-turbo"
    },
    "anthropic": {
      "enabled": false,
      "api_key": "",
      "model": "claude-3-opus-20240229",
      "max_tokens": 2000,
      "temperature": 0.7,
      "timeout": 30,
      "fallback_model": "claude-3-sonnet-20240229"
    },
    "google": {
      "enabled": false,
      "api_key": "",
      "model": "gemini-pro",
      "max_tokens": 2000,
      "temperature": 0.7,
      "timeout": 30,
      "fallback_model": "gemini-pro"
    },
    "local": {
      "enabled": true,
      "models": {
        "text_generation": "microsoft/DialoGPT-medium",
        "sentiment_analysis": "cardiffnlp/twitter-roberta-base-sentiment-latest",
        "summarization": "facebook/bart-large-cnn",
        "translation": "Helsinki-NLP/opus-mt-ru-en"
      },
      "device": "cpu",
      "cache_enabled": true,
      "batch_size": 8
    }
  },
  "content_generation": {
    "default_language": "ru",
    "supported_languages": ["ru", "en", "es", "fr", "de"],
    "auto_translate": false,
    "quality_threshold": 0.7,
    "max_retries": 3,
    "styles": {
      "professional": {"temperature": 0.3, "top_p": 0.9},
      "creative": {"temperature": 0.8, "top_p": 0.95},
      "balanced": {"temperature": 0.5, "top_p": 0.92}
    }
  },
  "seo_optimization": {
    "enabled": true,
    "auto_keywords": true,
    "keyword_density": 0.02,
    "meta_description_length": 160,
    "title_length": 60,
    "auto_internal_links": true,
    "schema_markup": true
  },
  "moderation": {
    "enabled": true,
    "toxicity_threshold": 0.7,
    "spam_detection": true,
    "profanity_filter": true,
    "auto_reject_threshold": 0.9
  },
  "cache": {
    "enabled": true,
    "ttl": 3600,
    "max_size": 1000,
    "storage_path": "./cache",
    "redis_enabled": false,
    "redis_url": "redis://localhost:6379/2"
  },
  "rate_limiting": {
    "enabled": true,
    "requests_per_minute": 60,
    "requests_per_hour": 1000,
    "requests_per_day": 10000,
    "burst_size": 10
  },
  "monitoring": {
    "enabled": true,
    "log_level": "INFO",
    "metrics_enabled": true,
    "alert_threshold": 0.8,
    "performance_tracking": true,
    "error_reporting": true
  },
  "security": {
    "encrypt_keys": true,
    "key_rotation_days": 90,
    "audit_logging": true,
    "ip_whitelist": [],
    "request_validation": true
  },
  "features": {
    "auto_summarization": true,
    "sentiment_analysis": true,
    "keyword_extraction": true,
    "content_personalization": true,
    "a_b_testing": false,
    "voice_generation": false
  }
}